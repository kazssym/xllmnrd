{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "(gdb) Launch",
            "preLaunchTask": "Build",
            "program": "${workspaceFolder}/xllmnrd/xllmnrd",
            "args": [
                "--foreground"
            ],
            "environment": [],
            "cwd": "${workspaceFolder}/xllmnrd",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
